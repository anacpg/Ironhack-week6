
<h3>Product</h3>

<p> Title: <%= @product.title%></p>
<p> Description <%= @product.description  %></p>
<p> Deadline <%= @product.deadline  %></p>
<% if @product.user_id != 4 %>
  <p> User: <%= link_to @winner_user.name , user_path(@winner_user) %> </p>
<% else %>

  <div>
    <h4>Bids:</h4>
    <% @bids.each do |bid| %>
      <%= bid.user.name%> => <%= bid.amount %>$ <br>
    <% end %>
  </div>

  <div>
    <h5>New bid:</h5>
    <%= render "bids/form" %>
  </div>
  <br>
<% end %>



<%= link_to 'Back', user_products_path(@user) %>
